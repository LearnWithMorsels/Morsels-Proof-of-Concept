<div class="mdl-card mdl-shadow--2dp{{#if isActivity}} activities{{/if}}">
    <div class="card-front">
        {{#if properties._content.title}}
        <div class="mdl-card__title">
            <h2 class="mdl-card__title-text">{{properties._content.title}}</h2>
        </div>
        {{/if}}
        {{#if properties._content._video._local}}
        <video width="400" height="225" preload="metadata" poster="./app/resources/{{properties._content._video._local.poster}}" controls>
            {{#if properties._content._video._local._src.webm}}
            <source src="./app/resources/{{properties._content._video._local._src.webm}}" type="video/webm">
            {{/if}}
            {{#if properties._content._video._local._src.ogv}}
            <source src="./app/resources/{{properties._content._video._local._src.ogv}}" type="video/ogg">
            {{/if}}
            {{#if properties._content._video._local._src.mp4}}
            <source src="./app/resources/{{properties._content._video._local._src.mp4}}" type="video/mp4">
            {{/if}}
            {{#if properties._content._video._local._src.3gp}}
            <source src="./app/resources/{{properties._content._video._local._src.3gp}}" type="video/3gp">
            {{/if}}
        </video>
        {{else}}
            {{#if properties._content._video._youtube}}
            <iframe src="https://www.youtube.com/embed/{{properties._content._video._youtube.id}}?rel=0{{#unless properties._content._video._youtube._showControlsControls}}&amp;controls=0{{/unless}}{{#unless properties._content._video._youtube._showControlsTitle}}&amp;showinfo=0{{/unless}}" width="400" height="225" frameborder="0" webkitallowfullscreen mozallowfullscreen allowfullscreen></iframe>
            {{else}}
                {{#if properties._content._video._vimeo}}
                <iframe src="https://player.vimeo.com/video/{{properties._content._video._vimeo.id}}?color={{global.config.appColour}}{{#unless properties._content._video._vimeo._showControlsTitle}}&amp;title=0{{/unless}}{{#unless properties._content._video._vimeo._showControlsByline}}&amp;byline=0{{/unless}}{{#unless properties._content._video._vimeo._showControlsPortrait}}&amp;portrait=0{{/unless}}" width="400" height="225" frameborder="0" webkitallowfullscreen mozallowfullscreen allowfullscreen></iframe>
                {{/if}}
            {{/if}}
        {{/if}}
        {{#if properties._content.subtitle}}
        <div class="mdl-card__supporting-text">
            <h4 class="mdl-typography--font-light mdl-typography--subhead">{{{properties._content.subtitle}}}</h4>
            {{{properties._content.body}}}
        </div>
        {{else}}
            {{#if properties._content.body}}
            <div class="mdl-card__supporting-text">
                {{{properties._content.body}}}
            </div>
            {{/if}}
        {{/if}}
        {{#if properties._activities}}
        <div class="mdl-card__actions mdl-card--border">
            {{properties._activities.title}}
            <button class="mdl-button mdl-js-button mdl-button--fab mdl-button--mini-fab mdl-button--colored launch-activity">
                <i class="material-icons">{{properties._activities._icon}}</i>
            </button>
        </div>
        <div class="card-activities-ink"></div>
        {{/if}}
        <div class="mdl-card__menu">
            <button class="mdl-button mdl-button--icon mdl-js-button mdl-js-ripple-effect toggle-starred">
                <i class="material-icons">{{#if isStarred}}star{{else}}star_border{{/if}}</i>
            </button>
        </div>
    </div>
    <div class="card-activities">
        <children></children>
    </div>
</div>
